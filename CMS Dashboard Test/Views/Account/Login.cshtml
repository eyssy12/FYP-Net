@using System.Collections.Generic
@using Microsoft.AspNet.Http
@using Microsoft.AspNet.Http.Authentication
@model LoginViewModel
@inject SignInManager<CMS.Web.Configuration.Data.Models.ApplicationUser> SignInManager
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<div class="login-box-body">
    <p class="login-box-msg">Sign in to the dashboard</p>
    <form novalidate ng-submit="onLogin()" asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
        <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
        <div class="text-green">@ViewBag.ForgotPasswordResult</div>
        <div class="form-group has-feedback">
            <input asp-for="UserName" type="text" class="form-control" placeholder="Username">
            <span class="fa fa-user form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
            <input asp-for="Password" type="password" class="form-control" placeholder="Password">
            <span class="fa fa-lock form-control-feedback"></span>
        </div>
        <div class="row">
            <div class="col-xs-8">
                <div class="checkbox icheck">
                    <label>
                        <input asp-for="RememberMe" type="checkbox">
                        Remember Me
                    </label>
                </div>
            </div><!-- /.col -->
            <div class="col-xs-4">
                <button id="loginButton" type="submit" class="btn btn-primary btn-block btn-flat ladda-button" ladda="isLoggingIn" data-style="slide-up">
                    <span class="ladda-label">Log In</span>
                    <span class="ladda-spinner"></span>
                </button>
            </div><!-- /.col -->
        </div>
    </form>
    <hr />
    <a asp-controller="Account" asp-action="ForgotPassword">I forgot my password</a><br>
</div><!-- /.login-box-body -->