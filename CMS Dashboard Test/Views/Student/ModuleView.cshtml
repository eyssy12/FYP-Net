@model CMS.Dashboard.Test.Views.Models.ModuleViewViewModel
@{
    ViewData["Title"] = "CMS - Module View";
    ViewBag.NavigationPage = "Module View";
}
<div class="row" ng-controller="ModuleViewController">
    <div class="col-md-8 col-md-offset-2" ng-init="init('@Model.ModuleId')">
        <div class="box box-primary">
            <div class="box-header with-border">
                <div class="col-md-12">
                    <div class="form-group">
                        <h1 class="text-center text-primary" ng-show="!loading">
                            <i class="fa fa-book"></i>
                            {{ module.Name }}
                        </h1>
                    </div>
                    <div class="form-group">
                        <h4 ng-show="!loading" class="text-center">
                            {{ getModuleTypeAsString(module.ModuleType) }}
                            <span class="text-muted">module</span>
                        </h4>
                    </div>
                </div>
            </div>
            <div ng-show="!loading" class="box-body">
                <button type="button" class="btn btn-primary btn-flat pull-left" onclick="location.href='@Url.Action("Modules", "Student")'">
                    Return to modules
                </button>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <h2 class="text-left">
                                <i class="fa fa-angle-double-right"></i>
                                Topics
                            </h2>
                        </div>
                        <div class="form-group">
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi ultricies felis odio. Ut varius leo id sollicitudin interdum.
                        </div>
                    </div>
                </div>
            </div>
            <div class="overlay" ng-show="loading">
                <i class="fa fa-refresh fa-spin"></i>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="~/js/Angular/Services/HttpService.js"></script> 
    <script src="~/js/Angular/Services/EnumerationsService.js"></script> 
    <script src="~/js/Angular/Services/ModuleService.js"></script> 
    <script src="~/js/Angular/Controllers/Student/ModuleViewController.js"></script> 
}