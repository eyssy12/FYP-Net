@{ 
    ViewData["Title"] = "CMS - Classmates";
    ViewBag.NavigationPage = "Classmates";
}
<div class="row" ng-controller="ClassmatesController">
    <div class="col-md-8 col-md-offset-2">
        <div class="box">
            <div class="box-body">
                <!-- ng-show will not show this errormessage if the errorMessge itself is empty or null -->
                <div class="text-danger" ng-show="errorMessage">{{ errorMessage }}</div>
                <div class="form-group">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Options</th>
                                <th>FirstName</th>
                                <th>LastName</th>
                                <th>BirthDate</th>
                            </tr>
                        </thead>
                        <tr ng-repeat="student in students">
                            <td>
                                <div class="box-tools pull-left">
                                    <button type="button" class="btn btn-box-tool" ng-bootbox-alert="This feature is not supported in FYPCMS v1.0">
                                        <i class="fa fa-envelope" data-toggle="tooltip" data-original-title="Send Message"></i>
                                    </button>
                                </div>
                            </td>
                            <td> {{ student.StudentPerson.Person.FirstName }}</td>
                            <td> {{ student.StudentPerson.Person.LastName }}</td>
                            <td> {{ getBirthdateFormatted(student.StudentPerson.Person.BirthDate) }}</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        
    </div>
</div>
@section Scripts {
    <!-- Moment.js -->
    <script type="text/javascript" src="~/lib/momentjs/min/moment.min.js"></script>
    <!-- Angular Services -->
    <script type="text/javascript" src="~/js/Angular/Services/HttpService.js"></script>
    <script type="text/javascript" src="~/js/Angular/Services/ClassService.js"></script>

    <script type="text/javascript" src="~/js/Angular/Controllers/Student/ClassmatesController.js"></script>
}